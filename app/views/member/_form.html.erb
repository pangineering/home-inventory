<%= form_with model: @member, url: member_path do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div>
    <%= form.label :role %><br>
    <%= form.text_field :role, class: "form-control" %>
  </div>
  <div>
    <%= form.label :gender %><br>
    <%= form.select :gender, ["Male", "Female"] %>
  </div>
  <br />
  <div>
    <%= form.submit class: "btn btn-primary btn-block" %>
  </div>
<% end %>